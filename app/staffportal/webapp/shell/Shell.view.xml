<mvc:View
    controllerName="com.epic.yggdrasil.staffportal.shell.Shell"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:w="sap.ui.integration.widgets"
    xmlns="sap.m"
    displayBlock="true">
    <App id="staffApp">
        <pages>
            <Page id="_IDGenPage1" title="Yggdrasil Staff Portal" showHeader="false">
                <content>
                    <VBox id="mainVBox" fitContainer="true">
                        <w:Card 
                            id="headerCard" 
                            host="epicHost" 
                            manifest="./cards/HeaderCard/manifest.json" />
                        <w:Card 
                            id="navCard" 
                            host="epicHost" 
                            manifest="./cards/NavCard/manifest.json" />
                        <VBox 
                            id="staffVBox" 
                            visible="{context>/currentTab === 'staff'}">
                            <w:Card 
                                id="filterCard" 
                                host="epicHost" 
                                manifest="./cards/FilterCard/manifest.json" />
                            <w:Card 
                                id="staffTableCard" 
                                host="epicHost" 
                                manifest="./cards/StaffTable/manifest.json" />
                        </VBox>
                        <VBox 
                            id="financeVBox" 
                            visible="{context>/currentTab === 'finance'}">
                            <w:Card 
                                id="financeCard" 
                                host="epicHost" 
                                manifest="./cards/FinanceCard/manifest.json" />
                        </VBox>
                    </VBox>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>