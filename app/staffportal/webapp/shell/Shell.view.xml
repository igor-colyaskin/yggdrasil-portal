<mvc:View
    controllerName="com.epic.yggdrasil.staffportal.shell.Shell"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:w="sap.ui.integration.widgets"
    xmlns="sap.m"
    displayBlock="true">
    <App id="staffApp">
        <pages>
            <Page id="_IDGenPage1" title="Yggdrasil Staff Portal" showHeader="false">
                <content>
                    <VBox id="mainVBox" fitContainer="true" >
                        <VBox id="headerSection"/>
                        <VBox id="navSection"/>
                        <VBox id="staffFilterContainer" visible="{= ${ui>/currentTab} === 'staff' }"/>
                        <VBox id="staffTableContainer" visible="{= ${ui>/currentTab} === 'staff' }"/>
                        <VBox id="contextStripContainer" visible="{= ${ui>/currentTab} !== 'staff' &amp;&amp; !!${ui>/selectedEmployeeID} }"/>
                        <VBox id="projectRegistrySection" visible="{= ${ui>/currentTab} === 'registry' }"/>
                        <VBox id="projectAssignmentsSection" visible="{= ${ui>/currentTab} === 'assignments' &amp;&amp; !!${ui>/selectedEmployeeID} }"/>
                        <VBox id="noEmployeeSelectedMessage" visible="{= ${ui>/currentTab} !== 'staff' &amp;&amp; !${ui>/selectedEmployeeID} }">
                            <IllustratedMessage 
                                id="noEmployeeMessage" title="Никто не выбран" 
                                description="Вернитесь на вкладку Персонал и выберите сотрудника для анализа" 
                                illustrationType="sapIllu-SearchEarth" />
                        </VBox>
                        <VBox id="financeSection" visible="{= ${ui>/currentTab} === 'finance' &amp;&amp; !!${ui>/selectedEmployeeID} }"/>
                    </VBox>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>