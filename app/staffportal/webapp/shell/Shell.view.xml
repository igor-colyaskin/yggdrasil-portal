<mvc:View
    controllerName="com.epic.nebula.shell.Shell"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
    <App id="nebulaApp">
        <Page id="mainPage" title="Nebula Portal 2026" titleLevel="H1">
            <headerContent>
                <Button id="resetIdentityBtn" icon="sap-icon://reset" press=".onResetIdentity" tooltip="Сменить роль" />
            </headerContent>
            <content>
                <VBox id="navContainer" />
                <BusyIndicator id="nebulaLoader" size="3rem" class="sapUiMediumMargin" visible="false" />
                <VBox id="galaxyCore" class="sapUiContentPadding" width="100%" />
            </content>
        </Page>
    </App>
</mvc:View>