<mvc:View
    controllerName="com.epic.yggdrasil.staffportal.cards.StaffTable.StaffTable"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Table 
        id="innerStaffTable"
        busy="{uiModel>/isBusy}"
        items="{path: '/Staff',
                parameters: {count: true},
                templateShareable: true
        }"
        growing="true"
        growingThreshold="10"
        sticky="HeaderToolbar,ColumnHeaders">
        <columns>
            <Column width="15rem">
                <Text text="Сотрудник" />
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <Text text="Департамент" />
            </Column>
            <Column hAlign="Center" width="8rem">
                <Text text="Действие" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier title="{name}" text="{email}" />
                    <Text text="{department}" />
                    <Button 
                        icon="sap-icon://filter" 
                        type="Transparent" 
                        press=".onSetAsFilter"
                        tooltip="Установить как фильтр" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>