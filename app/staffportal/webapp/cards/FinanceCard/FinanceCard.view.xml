<mvc:View controllerName="com.epic.yggdrasil.staffportal.cards.FinanceCard.FinanceCard"
    xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <VBox class="sapUiSmallMargin">
        <f:SimpleForm title="Начисления" layout="ResponsiveGridLayout" editable="false">
            <f:content>
                <Label text="Оклад" />
                <Text text="{fin>salary} {fin>currency}" />
            </f:content>
        </f:SimpleForm>
        <Table items="{fin>equipment}" headerText="Закрепленное оборудование" noDataText="Техника не выдавалась">
            <columns>
                <Column>
                    <Text text="Тип" />
                </Column>
                <Column>
                    <Text text="Модель" />
                </Column>
                <Column>
                    <Text text="Серийный номер" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{fin>type}" />
                        <Text text="{fin>model}" />
                        <Text text="{fin>serialNum}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</mvc:View>