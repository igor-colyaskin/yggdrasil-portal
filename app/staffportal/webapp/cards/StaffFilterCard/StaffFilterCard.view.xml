<mvc:View 
    controllerName="com.epic.yggdrasil.staffportal.cards.StaffFilterCard.StaffFilterCard"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m"  
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.ui.layout.form">
    <OverflowToolbar class="sapUiTibyMarginTopBottom" height="auto">
        <VBox>
            <Label text="Сотрудник" />
            <SearchField id="nameFilter" width="200px" placeholder="Имя или Email..." />
        </VBox>
        <VBox>
            <Label text="Отдел" />
            <Select id="deptFilter" width="200px" forceSelection="false" />
        </VBox>
        <ToolbarSpacer />
        <Button icon="sap-icon://settings" text="Настройка столбцов" press=".onTableSettings" />
        <Button icon="sap-icon://sort" text="Сортировка" press=".onSort" />
        <ToolbarSeparator />
        <Button text="Go" type="Emphasized" press=".onGo"/>
    </OverflowToolbar>
</mvc:View>