<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <ViewSettingsDialog 
        title="Настройка колонок"
        confirm=".onConfirmSettings">
        <filterItems>
            <ViewSettingsFilterItem text="Видимость" multiSelect="true">
                <items>
                    <ViewSettingsItem text="Имя" key="name" selected="{ui>/settings/staffTable/columns/name}" />
                    <ViewSettingsItem text="Email" key="email" selected="{ui>/settings/staffTable/columns/email}" />
                    <ViewSettingsItem text="Отдел" key="dept" selected="{ui>/settings/staffTable/columns/dept}" />
                </items>
            </ViewSettingsFilterItem>
        </filterItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>