<mvc:View
    controllerName="com.epic.yggdrasil.staffportal.cards.ProjectRegistry.ProjectRegistry"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox class="sapUiSmallMargin">
        <Table id="projectsTable" items="{projects>/items}">
            <headerToolbar>
                <OverflowToolbar>
                    <Title text="Project Registry (REST Fetch Mode)"/>
                    <ToolbarSpacer />
                    <Button icon="sap-icon://refresh" press="._fetchProjectData" />
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Text text="Project Name" />
                </Column>
                <Column>
                    <Text text="Status" />
                </Column>
                <Column hAlign="End">
                    <Text text="Deadline" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <ObjectIdentifier title="{projects>name}" text="{projects>ID}"/>
                        <ObjectStatus 
                    text="{projects>status}" 
                    state="{path: 'projects>status', formatter: '.formatStatus'}" />
                        <Text text="{path: 'projects>deadline'}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</mvc:View>